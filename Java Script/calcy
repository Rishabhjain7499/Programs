 function Addition()										//function Addition	
 {
   //var a=prompt("Enter the 1st Number:");
   var num1=Number(document.getElementById("Num1").value);
   //var b=prompt("Enter the 2nd Number:");
   var num2=Number(document.getElementById("Num2").value);
   var add=num1+num2;
   document.getElementById("id1").innerHTML="Addition ="+add;
   
 }
  function Subtraction()									//function Subtraction
 {
   //var a=prompt("Enter the 1st Number:");
   var num1=Number(document.getElementById("Num1").value);
   //var b=prompt("Enter the 2nd Number:");
   var num2=Number(document.getElementById("Num2").value);
   var sub=num1-num2;
   document.getElementById("id2").innerHTML="Subtraction ="+sub;
 }
 function Multiplication()										//function Multiplication
 {
   //var a=prompt("Enter the 1st Number:");
   var num1=Number(document.getElementById("Num1").value);
   //var b=prompt("Enter the 2nd Number:");
   var num2=Number(document.getElementById("Num2").value);
   var mul=num1*num2;
   document.getElementById("id3").innerHTML="Multiplication ="+mul;
 }
 function Division()											//function Division
 {
   //var a=prompt("Enter the 1st Number:");
   var num1=Number(document.getElementById("Num1").value);
   //var b=prompt("Enter the 2nd Number:");
   var num2=Number(document.getElementById("Num2").value);
   
   var div=num1/num2;
   document.getElementById("id4").innerHTML="Division ="+div;
 }
 
