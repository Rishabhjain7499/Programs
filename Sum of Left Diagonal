#include<stdio.h>
#include<conio.h>
int main()
{
	int a[10][10],r,c,i,j,sum=0;
	printf("Enter the rows and column");
	scanf("%d%d",&r,&c);
	printf("Enter the elements");
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}
	for(i=0;i<r;i++)
	{

		for(j=0;j<c;j++)
		{
			if(i==j)
			{
				
				sum=sum+a[i][j];
			}
		}
	}
		printf("the sum of left diagonal is= %d",sum);
}
